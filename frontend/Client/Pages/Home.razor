@page "/"
@using frontend.Client.Components
@using frontend.Models
@using frontend.Services
@inject BackendAPI BackendAPIService

<PageTitle>Home</PageTitle>

<div id="home">
    <div class="container-fluid">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <h3>Welcome on</h3>
            <h2 class="registry-name">@homeData.Name</h2>
            <h5 class="registry-description">@homeData.Description</h5>
        </div>

        <hr/>

        <div class="row justify-content-center">
            <div class="col-8">
                <span><strong>Number of Repositories:</strong></span>
                <br />
                <span>@homeData.NumberOfRepos</span>
            </div>
            <div class="col-4 pt-3">
                <span><strong>Maintainer:</strong></span>
                <br />
                @if (homeData.Maintainer != null)
                {
                    <span>@homeData.Maintainer</span>
                }
                else
                {
                    <span><i>No maintainer</i></span>
                }
            </div>
            <div class="col-8">
                <span><strong>Labels:</strong></span>
                <br />
                @if (homeData.Labels.Length == 0)
                {
                    <span><i>No labels</i></span>
                }
                else
                {
                    <TagInput Tags="@homeData.ToTagItem()" />
                }
            </div>
            <div class="col-4 pt-3">
                @if (homeData.MaintainerUrl != null)
                {
                    <a href="@homeData.MaintainerUrl">@homeData.MaintainerUrl <Icon Name="IconName.BoxArrowInUpRight"/></a>
                }
            </div>
        </div>
    </div>
</div>


@code {
    private RegistryInfo homeData;

    protected override void OnInitialized()
    {
        homeData = BackendAPIService.RegistryInfo;
    }
}