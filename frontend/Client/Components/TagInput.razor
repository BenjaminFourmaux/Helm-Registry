@namespace frontend.Client.Components

<div class="tagInput">
    @foreach (var tag in Tags)
    {
         <span class="tag tag-@tag.color">@tag.label</span>
        @* <Badge Color="BadgeColor.Primary">@tag.label</Badge> *@
    }
</div>

@code {
    @using frontend.Models

    [Parameter]
    public TagItem[] Tags { get; set; } = [];
}